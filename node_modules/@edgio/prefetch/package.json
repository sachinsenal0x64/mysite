{
  "name": "@edgio/prefetch",
  "version": "7.7.0",
  "description": "Enables prefetching and caching of pages using Edgio and Workbox.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "dependencies": {
    "@edgio/core": "^7.7.0",
    "cheerio": "^1.0.0-rc.3",
    "json-query": "^2.2.2",
    "workbox-cacheable-response": "^5.1.2",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.2",
    "workbox-precaching": "^5.1.4",
    "workbox-routing": "^5.1.2",
    "workbox-strategies": "^5.1.2"
  },
  "devDependencies": {
    "@edgio/cli": "^7.7.0",
    "@types/cheerio": "0.22.18",
    "@types/jest": "^25.2.1",
    "@types/json-query": "^2.2.0",
    "@types/node": "^13.11.1",
    "fluentvalidation-ts": "^2.2.2",
    "node-fetch": "^2.6.0"
  },
  "scripts": {
    "docs": "typedoc",
    "build": "npm run build:npm && npm run build:cdn",
    "build:npm": "rm -rf ./dist; mkdir ./dist; tsc; cp -r package.json README.md stage/prefetch/src/* dist",
    "build:cdn": "rm -rf ./dist-cdn; mkdir -p ./dist-cdn/v$npm_package_version; webpack --config webpack.config.cdn.js; cp -r ./dist/cdn/* ./dist-cdn/v$npm_package_version/",
    "watch": "npm-watch",
    "ts:watch": "tsc --watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "release": "cd ./dist; npm publish --access public",
    "release:for-cdn": "yalc add @edgio/cli @edgio/core && node node_modules/@edgio/cli deploy --token=$PREFETCH_CDN_DEPLOY_TOKEN",
    "test": "jest --watchAll=false"
  },
  "keywords": [],
  "author": "Edgio",
  "license": "Apache-2.0",
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": [
        "js",
        "ts"
      ],
      "quiet": false
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "setupFiles": [
      "./test/setup.js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!workbox).+\\.js$"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleNameMapper": {
      "^@edgio/core(.*)$": "<rootDir>/../core/src/$1"
    },
    "collectCoverageFrom": [
      "./src/**/*.{ts,js}",
      "!**/index.ts",
      "!**/test/**",
      "!**/getHostName.ts"
    ],
    "testEnvironment": "jsdom"
  }
}
